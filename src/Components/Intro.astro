---
const { title, children } = Astro.props;
---

<div class="w-full p-5 border-2 bg-gray-800">
  <!-- Top Bar with Label -->
  <div class="flex justify-between items-center mb-3">
    <span class="text-md text-white bg-blue-500 px-2 py-1 rounded">
      Introduction
    </span>
  </div>

  <!-- Title -->
  <h3 class="text-2xl font-bold text-yellow-100 border-b-2 border-dashed w-fit mb-2 py-2">
    {title}
  </h3>

  <!-- Description -->
  <span class="text-slate-200 mt-2 text-md leading-relaxed">
    <slot/>
  </span>
</div>
