---
import { AlertIcon, WarningIcon, ErrorIcon } from "../ReactComponent/icons/Indicator_Icons";


const { type } = Astro.props as { type: "tip" | "warning" | "error"};

const styles: Record<string, string> = {
  tip: "bg-blue-100 dark:bg-[#0F0F0F] dark:text-blue-100 text-blue-800 border-l-4 border-blue-500",
  warning: "bg-yellow-100 dark:bg-[#0F0F0F] dark:text-yellow-100 text-yellow-800 border-l-4 border-yellow-500",
  error: "bg-red-100 dark:bg-[#0F0F0F] dark:text-red-100 text-red-800 border-l-4 border-red-500",
};
---

<div class={`p-4 my-3 rounded-md shadow-md ${styles[type]}`}>
  <span class="mr-2">
    {type === "tip" ? <AlertIcon /> : type === "warning" ? <WarningIcon /> : <ErrorIcon />}
  </span>
    <slot/>
</div>
