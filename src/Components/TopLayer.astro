---
import logo from "../../public/som.svg";
import { GithubIcon } from "../ReactComponent/icons/Social_Icons";
---

<div
    class="w-full bg-[#112] dark:bg-[#101012] p-[4px_10px] min-h-[30px] dark:border-b-1 border-b-4 border-indigo-400 text-white flex items-center justify-between flex-wrap gap-[10px]"
>
    <div
        style={{ fontFamily: "Grand Hotel" }}
        class="text-[1.5rem] text-indigo-400 font-medium flex justify-center items-center gap-2"
    >
        <img src={logo.src} alt="logo" width={14} height={14}>
        <a href="/">SomCheat</a>
    </div>
    <div class="flex justify-center items-center gap-[10px]">
        <a class="mx-5" href="https://github.com/Adam-Elmi/SomCheat">
            <GithubIcon dimension={26} />
        </a>
        <!-- Sun Icon -->
        <button id="light-btn" class="text-yellow-500 cursor-pointer p-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="28"
            height="28"
            viewBox="0 0 24 24"
          >
            <g fill="none">
