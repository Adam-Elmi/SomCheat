        <!-- Moon Icon -->
        <button id="dark-btn" class="text-indigo-400 cursor-pointer">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path
              fill="currentColor"
