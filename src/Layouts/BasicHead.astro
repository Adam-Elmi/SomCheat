---
const { title } = Astro.props as {title: string};
---

<head>
    <script is:inline>
        const theme = localStorage.getItem("theme-value");
        document.querySelector("html").dataset.theme = theme;
    </script>
    <script src="../utils/applyTheme.ts"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/som.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Grand+Hotel&family=Kalam:wght@300;400;700&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet"
    />
    <title>{title}</title>
</head>
