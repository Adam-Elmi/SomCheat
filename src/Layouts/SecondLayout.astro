---
import "../styles/global.css";
import BasicHead from "./BasicHead.astro";
import Footer from "./Footer.astro";
import Nav from "../Components/Nav.astro";
const { title, frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
    <BasicHead  title={ title }/>
	<body>
    <Nav path={frontmatter.url}/>
		<main>
      <slot/>
    </main>
	</body>
  <Footer/>
</html>


<style is:inline>
/* Modern H1 with Icon */
h1 {
  font-size: 2.5rem;
  font-weight: 700;
  color: #1f2937;
  display: flex;
  align-items: center;
  gap: 0.5rem; 
  padding-bottom: 0.5rem;
  margin: 1rem 0;
  border-bottom: 3px solid #3b82f6; 
  letter-spacing: -0.02em;
  line-height: 1.2;
  transition: border-color 0.2s ease;
}

/* Icon */
h1::before {
  content: "\2756";
  font-size: 2.5rem;
  color: #3b82f6;
}

/* Hover Effect */
h1:hover {
  border-bottom-color: #1d4ed8;
}
/* Modern H1 with Icon */
h2 {
  font-size: 1.75rem;
  font-weight: 700;
  color: #6191f0;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding-bottom: 0.5rem;
  margin: 1rem 0;
  border-bottom: 3px solid #eee;
  letter-spacing: -0.02em;
  line-height: 1.2;
  transition: border-color 0.2s ease;
}

/* Icon */
h2::before {
  content: "\2756";
  font-size: 2.2rem;
  color: #3b82f6;
}

  /* Base styles */
.astro-code {
  white-space: pre-wrap;
  word-break: break-word;
  overflow-x: auto;
  max-width: 100%;
  padding: 1rem;
  box-sizing: border-box;
}

/* Container styles */
.code-container {
  width: 100%;
  max-width: 600px;
  border: 2px solid #334155;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

/* Header styles */
.code-header {
  background: #1e293b;
  border-bottom: 1px solid #334155;
  display: flex;
  align-items: center;
  padding: 0.5rem;
  justify-content: space-between;
  color: #e2e8f0;
  font-style: italic;
}

p {
  line-height: 2;
  display: inline;
}
code:not(.astro-code > code) {
  background-color: #e3f8d0;
  padding: 0 2px;
}
/* Default styles */
ol, ol > li {
  font-size: 1rem;
  line-height: 2;
  word-break: normal;
  list-style: decimal;
  padding-left: 8px;
  padding-top: 8px;
}

@media (max-width: 640px) {
  ol, ol > li {
    font-size: 0.875rem;
    line-height: 1.5;
    word-break: break-word;
  }
  p {
    font-size: 0.875rem;
    line-height: 1.5;
    word-break: break-word;
  }
}

@media (max-width: 640px) {
  .astro-code {
    font-size: 0.75rem;
    padding: 0.5rem; 
  }

  .code-container {
    border-width: 1px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }

  .code-header {
    padding: 0.25rem;
  }
}

</style>